{
  "manifest_version": 3,
  "name": "Plex Poster Assistant",
  "short_name": "plex-poster-assistant",
  "version": "1.0.0",
  "description": "Extension to assist with managing posters in Plex",
  "icons": {
    "16": "/icons/favicon-16.png",
    "32": "/icons/favicon-32.png",
    "48": "/icons/favicon-48.png",
    "128": "/icons/favicon-128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html"
  }
}